<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAD7"
    tools:context=".Lapor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view2"
                    android:layout_width="417dp"
                    android:layout_height="93dp"
                    android:background="#E97777"
                    tools:layout_editor_absoluteX="-6dp" />

                <ImageButton
                    android:onClick="back"
                    android:id="@+id/imageButton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-20dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    android:background="#E97777"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="21dp"
                    app:srcCompat="@drawable/riwayat1"
                    tools:layout_editor_absoluteX="204dp"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="248dp"
                    android:layout_marginTop="24dp"
                    android:text="Smart Rescue Madani Kota Pekanbaru "
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="276dp"
                    tools:layout_editor_absoluteY="16dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Alamat" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bulat"
                android:ems="10"
                android:hint="Masukan Alamat...."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Informasi dan Keterangan" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/bulat"
                android:hint="Masukan Keterangan...." />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Jenis Pelapor" />

            <Spinner
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:entries="@array/jenispelaporan">
            </Spinner>

            <Button
                android:onClick="lapor"
                android:id="@+id/button2"
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#FF9F9F"
                android:layout_marginTop="20dp"
                android:text="Laporkan" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>